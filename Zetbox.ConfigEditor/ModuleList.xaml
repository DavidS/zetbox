<UserControl x:Class="Zetbox.ConfigEditor.ModuleList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:Zetbox.ConfigEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <ctrls:CommandButton CommandViewModel="{Binding AddCommand}"
                                     Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
            </ToolBar>
        </ToolBarTray>
        <ctrls:ListView ItemsSource="{Binding List}"
                        HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#FFDDDDDD"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        Margin="2">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type ctrls:CommandButton}">
                                        <Setter Property="Margin"
                                                Value="2" />
                                    </Style>
                                </StackPanel.Resources>
                                <ctrls:CommandButton CommandViewModel="{Binding RemoveCommand}" />
                                <ctrls:CommandButton CommandViewModel="{Binding UpCommand}" />
                                <ctrls:CommandButton CommandViewModel="{Binding DownCommand}" />
                            </StackPanel>
                            <TextBlock Visibility="{Binding NotOnFallback, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Text="No Fallback" />
                            <StackPanel Grid.Column="2"
                                        Margin="2">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFeature}"
                                                         Value="false">
                                                <Setter Property="TextDecorations"
                                                        Value="Strikethrough" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock FontSize="13"
                                           Text="{Binding TypeName}" />
                                <TextBlock Text="{Binding Description}"
                                           Margin="10,1,1,1" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ctrls:ListView>
    </DockPanel>
</UserControl>
