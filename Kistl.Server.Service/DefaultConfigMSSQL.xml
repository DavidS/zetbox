<?xml version="1.0" encoding="utf-8" ?>
<KistlConfig xmlns="http://dasz.at/Kistl/">
  <ConfigName>Default Server Configuration</ConfigName>
  <Server StartServer="true">
    <SchemaProvider>MSSQL</SchemaProvider>
    <DatabaseProvider>System.Data.SqlClient</DatabaseProvider>
    <ConnectionString>Data Source=.\SQLEXPRESS;Initial Catalog=Kistl;Integrated Security=True;MultipleActiveResultSets=true;</ConnectionString>

    <DocumentStore>DocumentStore\Server\</DocumentStore>
    <LogFilePath>bin\LogFiles</LogFilePath>
    <CodeGenWorkingPath>bin\CodeGenNext</CodeGenWorkingPath>
    <CodeGenOutputPath>bin\CodeGen</CodeGenOutputPath>
    <CodeGenArchivePath>Backup</CodeGenArchivePath>
    <Modules>
      <Module>Kistl.API.ApiModule, Kistl.API</Module>
      <Module>Kistl.API.Server.ServerApiModule, Kistl.API.Server</Module>
      <Module>Kistl.Server.ServerModule, Kistl.Server</Module>
      <Module>Kistl.Objects.InterfaceModule, Kistl.Objects</Module>
      <Module>Kistl.Objects.EfModule, Kistl.Objects.EfImpl</Module>
      <Module>Kistl.Objects.MemoryModule, Kistl.Objects.MemoryImpl</Module>
      <Module>Kistl.DalProvider.Ef.EfProvider, Kistl.DalProvider.Ef</Module>
      <Module>Kistl.DalProvider.Memory.MemoryProvider, Kistl.DalProvider.Memory</Module>
      <Module>Kistl.App.Projekte.Server.CustomServerActionsModule, Kistl.App.Projekte.Server</Module>
      <Module>Kistl.App.Projekte.Common.CustomCommonActionsModule, Kistl.App.Projekte.Common</Module>

      <!-- Development/Master Server modules-->
      <Module>Kistl.Generator.GeneratorModule, Kistl.Generator</Module>
      <Module>Kistl.DalProvider.Client.Generator.ClientGeneratorProvider, Kistl.DalProvider.Client.Generator</Module>
      <Module>Kistl.DalProvider.Memory.Generator.MemoryGeneratorProvider, Kistl.DalProvider.Memory.Generator</Module>
      <Module>Kistl.DalProvider.Ef.Generator.EfGeneratorProvider, Kistl.DalProvider.Ef.Generator</Module>
      <!-- 
        cant be used since it won't compile under mono
      <Module>Kistl.Generator.ClickOnce.ClickOnceModule, Kistl.Generator.ClickOnce</Module>
      -->
    </Modules>
    <ClientFilesLocations>
      <Location Name="Client">P:\Kistl\bin\Debug\bin\Client</Location>
      <Location Name="Common">P:\Kistl\bin\Debug\bin\Common</Location>
      <Location Name="CodeGen">P:\Kistl\bin\CodeGen\bin\Debug</Location>
    </ClientFilesLocations>
  </Server>
  <SourceFileLocation>
    <!-- default probe path -->
    <string>P:\Kistl\bin\CodeGen\bin\Debug</string>
    <!-- common libaries -->
    <string>P:\Kistl\bin\Debug\bin\Common</string>
    <!-- Fallback path for local development -->
    <string>P:\Kistl\bin\Debug\bin\Server\fallback</string>

    <!-- CC.net on srv2008 -->
    <!-- default probe path -->
    <string>F:\CruiseControl.Net\Projects\Kistl\bin\CodeGen\bin\Debug</string>
    <!-- common libaries -->
    <string>F:\CruiseControl.Net\Projects\Kistl\bin\Debug\bin\Common</string>
    <!-- Fallback path for local development -->
    <string>F:\CruiseControl.Net\Projects\Kistl\bin\Debug\bin\Server\fallback</string>
  </SourceFileLocation>
</KistlConfig>