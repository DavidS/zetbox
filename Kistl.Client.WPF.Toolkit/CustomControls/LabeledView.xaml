<UserControl x:Class="Kistl.Client.WPF.View.LabeledView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tk="clr-namespace:Kistl.Client.WPF.View"
             MinWidth="100"
             MinHeight="26"
             Margin="4"
             x:Name="lbView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="{Binding Path=LabelMinWidth, ElementName=lbView}"
                              Width="{Binding Path=LabelWidth, ElementName=lbView}"
                              SharedSizeGroup="Label" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0"
                   Text="{Binding Label, Mode=OneWay}"
                   ToolTip="{Binding ToolTip, Mode=OneWay}" />

        <ContentPresenter Grid.Column="1"
                          Content="{Binding Model, Mode=OneWay}"
                          tk:VisualTypeTemplateSelector.RequestedKind="{Binding RequestedKind, Mode=OneWay}"
                          ContentTemplateSelector="{StaticResource defaultTemplateSelector}" />
    </Grid>
</UserControl>
