<?xml version="1.0"?>
<package>
  <metadata>
    <id>zetboxBasic</id>
    <version>1.0.$REVNUM$.$DIRTY$</version>
    <title>zetbox Basic</title>
    <authors>dasz.at OG</authors>
    <owners>dasz.at OG</owners>
    <licenseUrl>http://www.gnu.org/licenses/lgpl.html</licenseUrl>
    <projectUrl>http://zetbox.at/</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Basic components for the zetbox.</description>
    <releaseNotes>First package.</releaseNotes>
    <copyright>Copyright Â© 2012 dasz.at OG</copyright>
    <tags>Platform Database ORM Applications</tags>
  </metadata>
  <files>
    <!-- Executables and scripts -->
    <file src="Zetbox.Cli.exe" target="zetbox" />
    <file src="Zetbox.Cli.exe.config" target="zetbox" />

    <file src="Zetbox.ConfigEditor.exe" target="zetbox" />
    <file src="Zetbox.ConfigEditor.exe.config" target="zetbox" />

    <file src="Zetbox.Server.Service.exe" target="zetbox" />
    <file src="Zetbox.Server.Service.exe.config" target="zetbox" />

    <file src="Zetbox.Server.Service32.exe" target="zetbox" />
    <file src="Zetbox.Server.Service32.exe.config" target="zetbox" />

    <file src="Zetbox.WPF.exe" target="zetbox" />
    <file src="Zetbox.WPF.exe.config" target="zetbox" />

    <file src="ZbDeploy.cmd" target="zetbox" />
    <file src="ZbLocalPull.cmd" target="zetbox" />
    <file src="ZbPublish.cmd" target="zetbox" />
    <file src="ZbReset.cmd" target="zetbox" />

    <!-- Bootstrapper -->
    <file src="Bootstrapper\Zetbox.Client.Bootstrapper.exe" target="zetbox/Bootstrapper" />
    <file src="Bootstrapper\Zetbox.Client.Bootstrapper.exe.config" target="zetbox/Bootstrapper" />

    <!-- Common Components -->
    <file src="Common\Zetbox.API.Common.dll" target="zetbox\Common" />
    <file src="Common\Zetbox.API.dll" target="zetbox\Common" />
    <file src="Common\Zetbox.App.Projekte.Common.dll" target="zetbox\Common" />
    <file src="Common\Zetbox.Dalprovider.Base.dll" target="zetbox\Common" />
    <file src="Common\Zetbox.Dalprovider.Memory.dll" target="zetbox\Common" />

    <file src="Common\Fallback\Zetbox.Objects.dll" target="zetbox\Common\Fallback" />
    <file src="Common\Fallback\Zetbox.Objects.MemoryImpl.dll" target="zetbox\Common\Fallback" />

    <!-- Client-side Components -->
    <file src="Client\Zetbox.API.Client.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.API.Client.dll.config" target="zetbox\Client" />
    <file src="Client\Zetbox.App.Projekte.Client.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.Client.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.Client.WPF.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.Client.WPF.dll.config" target="zetbox\Client" />
    <file src="Client\Zetbox.Client.WPF.Toolkit.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.DalProvider.ClientObjects.dll" target="zetbox\Client" />
    <file src="Client\Zetbox.Microsoft.dll" target="zetbox\Client" />

    <!-- Server-side Components -->
    <file src="Server\Zetbox.API.Server.dll" target="zetbox\Server" />
    <file src="Server\Zetbox.App.Projekte.Server.dll" target="zetbox\Server" />
    <file src="Server\Zetbox.Generator.dll" target="zetbox\Server" />
    <file src="Server\Zetbox.Server.dll" target="zetbox\Server" />
    <file src="Server\Zetbox.Server.Wcf.dll" target="zetbox\Server" />

    <file src="Server\Mono.Posix.dll" target="zetbox\Server" />
    <file src="Server\Zetbox.Unix.dll" target="zetbox\Server" />

    <file src="..\..\Configs\Examples\**" target="Configs/Examples" />

    <!-- DISCUSS: satellite assemblies should go to separate nupkg -->
    <file src="**\*.resources.dll" target="zetbox" exclude="Tests\**" />

    <file src="..\..\Modules\**" target="zetbox/Modules" />
    <file src="..\..\Data\**" target="zetbox/Data" />

    <file src="HttpService\**" target="zetbox/HttpService" exclude="HttpService\bin\**" />
    <file src="HttpService\bin\Zetbox.Server.HttpService.dll" target="zetbox/HttpService/bin" />

    <file src="*.targets" target="tools" />

    <file src="Init-zetboxBasic.ps1" target="tools/Init.ps1" />
    <file src="env.xml" target="tools" />
    <file src="PrepareEnv.exe" target="tools" />
    <file src="PrepareEnv.exe.config" target="tools" />

    <!-- this is required to avoid being seen as empty package by nuget -->
    <!-- see #595 and #2590 on the nuget issue tracker                  -->
    <file src="README.zetbox.txt" target="content" />
  </files>
</package>