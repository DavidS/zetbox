<app:PropertyControl 
    x:Class="Kistl.GUI.Renderer.WPF.EditDoubleProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
    xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
    MinWidth="400"
    >
    <DockPanel 
        ToolTip="{Binding  ElementName=EditCtrl, Path=Description, UpdateSourceTrigger=PropertyChanged}"
        >
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=EditCtrl, Path=ShortLabel}" />
        <kevin:InfoTextBox Text="{Binding ElementName=EditCtrl, Path=DoubleValue, UpdateSourceTrigger=PropertyChanged}" 
                 IsReadOnly="{Binding ElementName=EditCtrl, Path=IsReadOnly, UpdateSourceTrigger=PropertyChanged}"
                 TextBoxInfo="{Binding ElementName=EditCtrl, Path=Description, UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</app:PropertyControl >
