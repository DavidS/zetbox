<app:PropertyControl 
    x:Class="Kistl.Client.Controls.EditPointerProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Kistl.Client.Controls"
    MinWidth="400" 
    x:Name="PointerCtrl" 
    Loaded="PointerCtrl_Loaded"
    Label="Label"
    >
    <DockPanel >
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=PointerCtrl, Path=Label}" Visibility="{Binding ElementName=PointerCtrl, Path=ShowLabel}" />
        <Button Name="btnNew" Click="btnNew_Click">New</Button>
        <Button Name="btnOpen" Click="btnOpen_Click">Open</Button>
        <ComboBox Name="cbValues" 
                  SelectedValue="{Binding ElementName=PointerCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                  SelectedValuePath="ID"
                  SelectionChanged="cbValues_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Converter={StaticResource IconConverter}}" Width="16" Height="16" />
                        <TextBlock Margin="2,0,0,0" Text="{Binding}" />                        
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </DockPanel>
</app:PropertyControl>
