<app:PropertyControl 
    x:Class="Kistl.Client.Controls.EditBoolProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Kistl.Client.Controls"
    MinWidth="400"
    x:Name="EditCtrl"
    Label="Label"
    Value="false"
    >
    <DockPanel>
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=EditCtrl, Path=Label}" />
        <CheckBox IsChecked="{Binding  ElementName=EditCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                  IsEnabled="{Binding  ElementName=EditCtrl, Path=IsEnabled, UpdateSourceTrigger=PropertyChanged}"
                  Content="{Binding  ElementName=EditCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                  VerticalAlignment="Center" VerticalContentAlignment="Center" IsThreeState="True" />
    </DockPanel>
</app:PropertyControl>
