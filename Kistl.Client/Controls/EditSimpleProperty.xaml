<UserControl x:Class="Kistl.Client.Controls.EditSimpleProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="150" x:Name="EditCtrl">
    <DockPanel >
        <Label DockPanel.Dock="Left" Width="100" Content="{Binding ElementName=EditCtrl, Path=Label}" />
        <TextBox Text="{Binding  ElementName=EditCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                 IsReadOnly="{Binding  ElementName=EditCtrl, Path=IsReadOnly, UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
</UserControl>
