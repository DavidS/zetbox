<app:PropertyControl 
    x:Class="Kistl.Client.Controls.EditSimpleProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
    xmlns:app="clr-namespace:Kistl.Client.Controls"
    MinWidth="400" x:Name="EditCtrl" ShortLabel="Label" Description="This is a simple string. Please enter a value." Value="Value">
    <DockPanel 
        ToolTip="{Binding  ElementName=EditCtrl, Path=Description, UpdateSourceTrigger=PropertyChanged}"
        >
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=EditCtrl, Path=Label}" />
        <kevin:InfoTextBox Text="{Binding  ElementName=EditCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                 IsReadOnly="{Binding  ElementName=EditCtrl, Path=IsReadOnly, UpdateSourceTrigger=PropertyChanged}"
                 TextBoxInfo="{Binding  ElementName=EditCtrl, Path=Description, UpdateSourceTrigger=PropertyChanged}"/>
    </DockPanel>
</app:PropertyControl>
