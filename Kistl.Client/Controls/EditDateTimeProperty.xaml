<app:PropertyControl 
    x:Class="Kistl.Client.Controls.EditDateTimeProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.DateControls;assembly=WPFSamplesLib"
    xmlns:app="clr-namespace:Kistl.Client.Controls"
    MinWidth="400" 
    x:Name="EditCtrl"
    ShortLabel="Label"
    Value="2008-01-01"
    >
    <DockPanel
        ToolTip="{Binding ElementName=EditCtrl, Path=Description, UpdateSourceTrigger=PropertyChanged}"
        >
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=EditCtrl, Path=ShortLabel}" />
        <kevin:DatePicker Value="{Binding ElementName=EditCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                          IsReadOnly="{Binding ElementName=EditCtrl, Path=IsReadOnly, UpdateSourceTrigger=PropertyChanged}"
                          CanEdit="True"/>
    </DockPanel>
</app:PropertyControl>
