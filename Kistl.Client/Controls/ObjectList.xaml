<UserControl x:Class="Kistl.Client.Controls.ObjectList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinWidth="100"
    Loaded="ObjectList_Loaded"
    x:Name="ListCtrl">
    <DockPanel>
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=ListCtrl, Path=Label}" x:Name="lbLabel" />
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Name="btnNew" Click="btnNew_Click">New</Button>
                <Button Name="btnRefresh" Click="btnRefresh_Click">Refresh</Button>
            </ToolBar>
            <ListView x:Name="lst" ItemsSource="{Binding}" 
                MouseDoubleClick="lst_MouseDoubleClick" MinHeight="150" SelectionChanged="lst_SelectionChanged" />
        </DockPanel>
    </DockPanel>
</UserControl>
