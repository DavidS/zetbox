<Window x:Class="Kistl.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:Kistl.Client.Controls"
    Title="Window1" Height="300" Width="300">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Name="menu_Exit" Click="menu_Exit_Click" />
            </MenuItem>
            <ComboBox 
                Name="cbObjectTypes" 
                SelectionChanged="ComboBox_SelectionChanged"
                ItemsSource="{Binding}" MinWidth="100" />
        </Menu>
        <my:ObjectList x:Name="lst" 
            SourceServerObjectType="Kistl.App.Base.ObjectClassServer, Kistl.App.Projekte"
            SourceClientObjectType="Kistl.App.Base.ObjectClassClient, Kistl.App.Projekte"/>
    </DockPanel>
</Window>
