<Window x:Class="Kistl.Client.ObjectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ObjectWindow" Height="480" Width="640"
    Loaded="Window_Loaded" SourceUpdated="Window_SourceUpdated" >
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="MenuItem_Click_Save">Save</Button>
            <Button Click="MenuItem_Click_Close" >Close</Button>
        </ToolBar>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="data">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Margin" Value="5,5,5,0" />
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
