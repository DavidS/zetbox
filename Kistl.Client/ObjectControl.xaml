<UserControl x:Class="Kistl.Client.ObjectControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Kistl.Client.Converter"
    xmlns:client="clr-namespace:Kistl.Client"
    Height="300" Width="300"
    Loaded="UserControl_Loaded" SourceUpdated="UserControl_SourceUpdated">
    <DockPanel><!-- 
        <ToolBar DockPanel.Dock="Top" >
            <Button Click="MenuItem_Click_Save" >Save</Button>
            <Button Click="MenuItem_Click_Close" >Close</Button>
            <Button Click="MenuItem_Click_Delete" >Delete</Button>
            <Menu>
                <MenuItem Header="Actions" Name="mnuActions" Click="mnuActions_Click"/>
            </Menu>
        </ToolBar>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="data">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Margin" Value="5,5,5,0" />
                    </Style>
                </StackPanel.Resources>
                <client:UndoManager.SharedUndoScope>
                    <client:UndoManager />
                </client:UndoManager.SharedUndoScope>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
