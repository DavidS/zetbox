<Window x:Class="Kistl.Client.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Kistl" Height="150" Width="300" WindowStyle="None" Topmost="True"
    x:Name="MyCtrl"
    ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Border CornerRadius="10,10,10,10" BorderThickness="1" BorderBrush="Navy">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" FontWeight="Bold" 
                   Text="{Binding  ElementName=MyCtrl, Path=Message, UpdateSourceTrigger=PropertyChanged}" />
            <ProgressBar Margin="10,10,10,0" Height="15"
                     Maximum="{Binding  ElementName=MyCtrl, Path=Steps, UpdateSourceTrigger=PropertyChanged}"
                     Value="{Binding  ElementName=MyCtrl, Path=CurrentStep, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Name="txtInfo" HorizontalAlignment="Center" Margin="0,10,0,0"
                   Text="{Binding  ElementName=MyCtrl, Path=Info, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Border>
</Window>
