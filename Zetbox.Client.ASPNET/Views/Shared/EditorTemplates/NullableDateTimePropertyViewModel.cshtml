@model NullableDateTimePropertyViewModel

@using Zetbox.API
@using Zetbox.Client.Presentables.ValueViewModels

@if (Model.IsReadOnly)
{
    @Html.DisplayFor(m => m.FormattedValue, new { @class = ViewData["class"] })
}
else
{
    if (Model.DatePartVisible)
    {
        @Html.TextBoxFor(m => m.DatePartString, new { @class = "datePicker" + ViewData["class"], placeholder = Model.ToolTip })
        @Html.ValidationMessageFor(model => model.DatePartString)
    }
    if (Model.TimePartVisible)
    {
        @Html.TextBoxFor(m => m.TimePartString, new { @class = "timePicker" + ViewData["class"], placeholder = Model.ToolTip })
        @Html.ValidationMessageFor(model => model.TimePartString)
    }
}
