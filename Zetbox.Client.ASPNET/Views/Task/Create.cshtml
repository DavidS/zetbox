@model Zetbox.Client.ASPNET.Models.TaskEditViewModel
@using Zetbox.Client.ASPNET
@{
    ViewBag.Title = "Create a Task";
}
<h2>Create a Task in Project @Html.DisplayFor(model => model.ProjectViewModel.Name)</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="AreaGroup1">
        <div class="editor-label">
            @Html.ZbLabelFor(model => model.ViewModel.PropertyModelsByName["Name"])
        </div>
        <div class="editor-field">
            @Html.ZbEditorFor(model => model.ViewModel.PropertyModelsByName["Name"])
            @Html.ValidationMessageFor(model => model.ViewModel.PropertyModelsByName["Name"].FormattedValue)
        </div>
        <div class="editor-label">
            @Html.ZbLabelFor(model => model.ViewModel.PropertyModelsByName["Aufwand"])
        </div>
        <div class="editor-field">
            @Html.ZbEditorFor(model => model.ViewModel.PropertyModelsByName["Aufwand"])
        </div>
        <div class="editor-label">
            @Html.ZbLabelFor(model => model.ViewModel.PropertyModelsByName["DatumVon"])
        </div>
        <div class="editor-field">
            @Html.ZbEditorFor(model => model.ViewModel.PropertyModelsByName["DatumVon"])
        </div>
        <div class="editor-label">
            @Html.ZbLabelFor(model => model.ViewModel.PropertyModelsByName["DatumBis"])
        </div>
        <div class="editor-field">
            @Html.ZbEditorFor(model => model.ViewModel.PropertyModelsByName["DatumBis"])
        </div>
    </div>
    <p>
        <input type="submit" value="Save" />
        @Html.ActionLink("Back to Project", "Details", "Project", new { id = Model.ProjectID }, null)
    </p>
}
