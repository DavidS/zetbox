<Window x:Class="Kistl.Client.WPF.StartupScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kistl"
        Width="480"
        Height="300" WindowStyle="None"
    x:Name="MyCtrl"
    Background="Transparent" AllowsTransparency="True"
    ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
  <Border>
    <Border.Background>
      <ImageBrush ImageSource="/Kistl.Client.WPF;component/SplashScreenImage.png" />
    </Border.Background>
    <StackPanel VerticalAlignment="Bottom">
      <!--<TextBlock HorizontalAlignment="Center" Margin="0 30 0 0" FontWeight="Bold"
             Text="{Binding  ElementName=MyCtrl, Path=Message}" /> -->
      <ProgressBar Margin="10 10 10 0" Height="15"
               Maximum="{Binding  ElementName=MyCtrl, Path=Steps}"
               Value="{Binding  ElementName=MyCtrl, Path=CurrentStep}" />
      <TextBlock Name="txtInfo" HorizontalAlignment="Center" Margin="0 10 0 10"
             Text="{Binding  ElementName=MyCtrl, Path=Info}" />
    </StackPanel>
  </Border>
</Window>