<Application x:Class="Kistl.Client.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:Kistl.Client.WPF.Converter"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <converter:IconConverter x:Key="IconConverter" />
            <converter:FormattingConverter x:Key="FormattingConverter" />
            <converter:GetTypeConverter x:Key="GetTypeConverter" />
            <converter:ValidityToBrushConverter x:Key="ValidityToBrushConverter" />
            <converter:DebugConverter x:Key="debug" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/DefaultViews.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
