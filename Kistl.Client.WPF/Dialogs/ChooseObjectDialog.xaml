<Window 
    x:Class="Kistl.Client.WPF.Dialogs.ChooseObjectDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose Object" Height="300" Width="300"
    Loaded="Window_Loaded"
    >
    <DockPanel>
        <DockPanel
            DockPanel.Dock="Top"
            Margin="0,0,0,3"
            >
            <Label DockPanel.Dock="Left">Search:</Label>
            <TextBox x:Name="txtSearch"/>
        </DockPanel>
        <ToolBar
            DockPanel.Dock="Bottom"
            Margin="0,3,0,0"
            >
            <Button IsDefault="True" Click="Select_Click">Select</Button>
            <Button IsCancel="True">Cancel</Button>
        </ToolBar>
        <ListView
            x:Name="lstObjects"
            MouseDoubleClick="lstObjects_MouseDoubleClick"
            SelectionMode="Single" />
    </DockPanel>
</Window>
