<ctrls:WindowView x:Class="Kistl.Client.WPF.View.ErrorListView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ctrls="clr-namespace:Kistl.Client.WPF.CustomControls;assembly=Kistl.Client.WPF.Toolkit"
                  xmlns:client="clr-namespace:Kistl.Client.Presentables;assembly=Kistl.Client"
                  Title="ErrorListView"
                  Height="300"
                  Width="300">
    <DockPanel>
        <UniformGrid DockPanel.Dock="Bottom"
                     Rows="1">
            <ctrls:CommandButton CommandViewModel="{Binding RefreshErrorsCommand}" />
            <ctrls:CommandButton CommandViewModel="{Binding CloseCommand}" />
        </UniformGrid>
        <ListView ItemsSource="{Binding Errors}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type client:ErrorDescriptor}">
                    <StackPanel>
                        <TextBlock Text="{Binding Item}" />
                        <ListBox ItemsSource="{Binding Errors}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</ctrls:WindowView>
