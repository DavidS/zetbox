<UserControl x:Class="Kistl.Client.WPF.View.ModuleEditor.AppLauncherDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ListView ItemsSource="{Binding Path=Modules}" ItemTemplateSelector="{StaticResource listItemTemplateSelector}">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick"
                                 Handler="ModuleList_MouseDoubleClick" />
                </Style>
            </ListView.Resources>
        </ListView>
    </Grid>
</UserControl>
