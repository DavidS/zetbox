<UserControl x:Class="Kistl.Client.WPF.View.KistlBase.BoolFilterExpression"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <CheckBox IsChecked="{Binding Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
              IsThreeState="{Binding AllowNullInput, Mode=OneWay}"
              ToolTip="{Binding ToolTip}" />
</UserControl>
