<view:PropertyView x:Class="Kistl.Client.WPF.View.KistlBase.StringDisplay"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:ctrls="clr-namespace:Kistl.Client.WPF.CustomControls"
                   xmlns:view="clr-namespace:Kistl.Client.WPF.View"
                   ToolTip="{Binding ToolTip}">

    <view:PropertyView.Label>
        <TextBlock Text="{Binding Label, Mode=OneWay}" />
    </view:PropertyView.Label>

    <TextBox Text="{Binding Value, Mode=OneWay}" ToolTip="{Binding ToolTip}" IsReadOnly="True" />
</view:PropertyView>