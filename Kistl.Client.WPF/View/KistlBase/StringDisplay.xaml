<view:PropertyEditor x:Class="Kistl.Client.WPF.View.KistlBase.StringDisplay"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:ctrls="clr-namespace:Kistl.Client.WPF.CustomControls;assembly=Kistl.Client.WPF.Toolkit"
                   xmlns:view="clr-namespace:Kistl.Client.WPF.View.KistlBase"
                   ToolTip="{Binding ToolTip}">
    <TextBox Text="{Binding Value, Mode=OneWay}" ToolTip="{Binding ToolTip}" IsReadOnly="True" />
</view:PropertyEditor>