<view:PropertyEditor x:Class="Kistl.Client.WPF.View.NullablePropertyTextBoxView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:ctrls="clr-namespace:Kistl.Client.WPF.CustomControls;assembly=Kistl.Client.WPF.Toolkit"
                     xmlns:view="clr-namespace:Kistl.Client.WPF.View.KistlBase"
                     xmlns:client="clr-namespace:Kistl.Client.Presentables;assembly=Kistl.Client"
                     xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
                     ToolTip="{Binding ToolTip}">

    <kevin:InfoTextBox Text="{Binding FormattedValue, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=true}"
                       TextBoxInfo="{Binding ToolTip}">
        <kevin:InfoTextBox.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding ClearValueCommand, Converter={StaticResource CommandConverter}}"
                          Header="{Binding ClearValueCommand.Label}"
                          ToolTip="{Binding ClearValueCommand.ToolTip}" />
            </ContextMenu>
        </kevin:InfoTextBox.ContextMenu>
    </kevin:InfoTextBox>

</view:PropertyEditor>