<UserControl x:Class="Kistl.Client.WPF.View.KistlBase.ActionDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Kistl.Client.WPF.CustomControls;assembly=Kistl.Client.WPF.Toolkit"
             ToolTip="{Binding ToolTip}">
    <Grid FocusManager.FocusedElement="{Binding ElementName=cmd}">
        <ctrls:CommandButton x:Name="cmd"
                             CommandViewModel="{Binding ExecuteCommand}" />
    </Grid>
</UserControl>