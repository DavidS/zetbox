<UserControl x:Class="Kistl.Client.WPF.View.TimeRecords.WorkEffortView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300"
             Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
                 Grid.Column="0"
                 Text="{Binding Bezeichnung}" />
    
        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Text="{Binding Notizen}" />

        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Text="{Binding From}" />

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding Thru}" />
    </Grid>
</UserControl>
