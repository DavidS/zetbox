<UserControl x:Class="Kistl.Client.WPF.View.LabeledView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:Kistl.Client.WPF.View"
             MinWidth="100"
             MinHeight="26"
             Margin="4">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150"
                              Width="Auto"
                              SharedSizeGroup="Label" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0"
                   Text="{Binding Label, Mode=OneWay}"
                   ToolTip="{Binding ToolTip, Mode=OneWay}" />

        <ContentPresenter Grid.Column="2"
                          Content="{Binding Model, Mode=OneWay}"
                          view:VisualTypeTemplateSelector.RequestedKind="{Binding RequestedKind, Mode=OneWay}"
                          ContentTemplateSelector="{StaticResource defaultTemplateSelector}" />
    </Grid>
</UserControl>
