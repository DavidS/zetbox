<Window x:Class="Kistl.GUI.Renderer.WPF.WorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:client="clr-namespace:Kistl.GUI.Renderer.WPF"
        Title="WorkspaceWindow"
        Height="550"
        Width="750"
        Closed="Self_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0"
                 Grid.Column="0">
            <Button Click="New_Click">New ...</Button>
            <Button Click="Delete_Click">Delete</Button>
            <Button Click="Save_Click">Save</Button>
            <Button Click="SaveAndClose_Click">Save and Close</Button>
            <Button Click="AbortAndClose_Click">Abort and Close</Button>
        </ToolBar>
        <TabControl Grid.Row="1"
                    Grid.Column="0"
                    Name="tabObjects"
                    TabStripPlacement="Left"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Objects}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock MaxWidth="150"
                                           Text="{Binding Header}"
                                           TextWrapping="Wrap" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel x:Name="TcContentPanel">
                        <ToolBar DockPanel.Dock="Top"
                                 ItemsSource="{Binding Menus}" />
                        <ScrollViewer x:Name="TcContentScroller"
                                      Content="{Binding Content}"
                                      Padding="2" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
