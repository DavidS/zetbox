<app:PropertyControl x:Class="Kistl.GUI.Renderer.WPF.EnumControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ToolTip="{Binding Description}">

    <app:PropertyControl.EditPart>
        <ComboBox x:Name="lst"
                  ItemsSource="{Binding ItemsSource, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding Value}" />
    </app:PropertyControl.EditPart>

</app:PropertyControl>
