<app:PropertyControl
    x:Name="Self"
    x:Class="Kistl.GUI.Renderer.WPF.EnumControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
    ToolTip="{Binding ElementName=Self, Path=Description}"
    Background="{Binding ElementName=Self, Path=IsValidValue, Converter={StaticResource ValidityToBrushConverter}}"
    >
    <app:PropertyControl.EditPart>
        <ComboBox
            x:Name="lst"
            ItemsSource="{Binding ElementName=Self, Path=ItemsSource, UpdateSourceTrigger=PropertyChanged}"
            IsSynchronizedWithCurrentItem="True"
            SelectedItem="{Binding ElementName=Self, Path=Value}"
            />
    </app:PropertyControl.EditPart>
</app:PropertyControl>
