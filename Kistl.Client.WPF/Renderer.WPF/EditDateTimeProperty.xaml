<app:PropertyControl x:Name="Self"
                     x:Class="Kistl.GUI.Renderer.WPF.EditDateTimeProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.DateControls;assembly=WPFSamplesLib"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="Date/Time Property"
                     Description="This is a simple date. Please enter a value."
                     ToolTip="{Binding ElementName=Self, Path=Description}">                     
    <app:PropertyControl.Label>
        <Label Content="{Binding ElementName=Self, Path=ShortLabel}" />
    </app:PropertyControl.Label>
    <app:PropertyControl.EditPart>
        <kevin:DatePicker
                Value="{Binding ElementName=Self, Path=Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                          IsReadOnly="{Binding ElementName=Self, Path=IsReadOnly}"
                          CanEdit="True"
                          Validation.ErrorTemplate="{StaticResource ValidationAdorner}" />
    </app:PropertyControl.EditPart>
</app:PropertyControl>
