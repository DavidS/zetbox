<app:PropertyControl x:Class="Kistl.GUI.Renderer.WPF.EditDateTimeProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.DateControls;assembly=WPFSamplesLib"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="Date/Time Property"
                     Description="This is a simple date. Please enter a value."
                     ToolTip="{Binding Description}">

    <app:PropertyControl.Label>
        <Label Content="{Binding ShortLabel}" />
    </app:PropertyControl.Label>
    <app:PropertyControl.EditPart>
        <kevin:DatePicker
                Value="{Binding Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                          IsReadOnly="{Binding IsReadOnly}"
                          CanEdit="True" />
    </app:PropertyControl.EditPart>
</app:PropertyControl>
