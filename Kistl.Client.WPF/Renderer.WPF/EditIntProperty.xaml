<app:PropertyControl 
    x:Class="Kistl.GUI.Renderer.WPF.EditIntProperty"
    x:Name="EditCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
    xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
    MinWidth="400"
    >
    <DockPanel 
        x:Name="Panel"
        ToolTip="{Binding  ElementName=EditCtrl, Path=Description}"
        >
        <Label DockPanel.Dock="Left" Width="150" Content="{Binding ElementName=EditCtrl, Path=ShortLabel}" />
        <kevin:InfoTextBox Text="{Binding ElementName=EditCtrl, Path=Value}" 
                 IsReadOnly="{Binding ElementName=EditCtrl, Path=IsReadOnly}"
                 TextBoxInfo="{Binding ElementName=EditCtrl, Path=Description}"/>
    </DockPanel>
</app:PropertyControl >
