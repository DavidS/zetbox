<app:PropertyControl x:Name="Self"
                     x:Class="Kistl.GUI.Renderer.WPF.EditIntProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="Integer Property"
                     Description="This is a simple integer. Please enter a value."
                     ToolTip="{Binding ElementName=Self, Path=Description}">
    <app:PropertyControl.Label>
        <Label Content="{Binding ElementName=Self, Path=ShortLabel}" />
    </app:PropertyControl.Label>
    <app:PropertyControl.EditPart>
        <kevin:InfoTextBox
                Text="{Binding ElementName=Self, Path=Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                           IsReadOnly="{Binding ElementName=Self, Path=IsReadOnly}"
                           TextBoxInfo="{Binding ElementName=Self, Path=Description}"
                           Validation.ErrorTemplate="{StaticResource ValidationAdorner}" />
    </app:PropertyControl.EditPart>
</app:PropertyControl >
