<app:PropertyControl x:Name="Self"
                     x:Class="Kistl.GUI.Renderer.WPF.EditBoolProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="Yes/No Property"
                     Description="Please enter a value."
                     ToolTip="{Binding ElementName=Self, Path=Description}"
                     Background="{Binding ElementName=Self, Path=IsValidValue, Converter={StaticResource ValidityToBrushConverter}}">
    <app:PropertyControl.Label>
        <Label Content="{Binding ElementName=Self, Path=ShortLabel}" />
    </app:PropertyControl.Label>
    <app:PropertyControl.EditPart>
        <CheckBox IsChecked="{Binding ElementName=Self, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                  Content="{Binding ElementName=Self, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                  IsEnabled="{Binding ElementName=Self, Path=IsEnabled}"
                  VerticalAlignment="Center"
                  VerticalContentAlignment="Center"
                  IsThreeState="True" />
    </app:PropertyControl.EditPart>
</app:PropertyControl>
