<app:PropertyControl x:Class="Kistl.GUI.Renderer.WPF.EditBoolProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="Yes/No Property"
                     Description="Please enter a value."
                     ToolTip="{Binding Description}">

    <app:PropertyControl.Label>
        <Label Content="{Binding ShortLabel}" />
    </app:PropertyControl.Label>

    <app:PropertyControl.EditPart>
        <CheckBox IsChecked="{Binding Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                  Content="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                  IsEnabled="{Binding IsEnabled}"
                  VerticalAlignment="Center"
                  VerticalContentAlignment="Center"
                  IsThreeState="True">
        </CheckBox>
    </app:PropertyControl.EditPart>

</app:PropertyControl>
