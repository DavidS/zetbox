<app:PropertyControl x:Class="Kistl.GUI.Renderer.WPF.EditSimpleProperty"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:kevin="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.InfoTextBox;assembly=WPFSamplesLib"
                     xmlns:app="clr-namespace:Kistl.GUI.Renderer.WPF"
                     ShortLabel="String Property"
                     Description="This is a simple string. Please enter a value."
                     ToolTip="{Binding Description}">

    <app:PropertyControl.Label>
        <Label Content="{Binding ShortLabel}" />
    </app:PropertyControl.Label>

    <app:PropertyControl.EditPart>
        <kevin:InfoTextBox
                Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"
                           IsReadOnly="{Binding IsReadOnly}"
                           TextBoxInfo="{Binding Description}" />
    </app:PropertyControl.EditPart>

</app:PropertyControl>
