    <DockPanel>
        <ctrls:WorkaroundToolBar DockPanel.Dock="Top">
            <ctrls:WorkaroundToolBar.Resources>
                <Style TargetType="{x:Type ctrls:CommandButton}"
                       BasedOn="{StaticResource ImageToolbarButton}" />
            </ctrls:WorkaroundToolBar.Resources>
            <ctrls:CommandButton CommandViewModel="{Binding NewCommand}" />
            <ctrls:CommandButton CommandViewModel="{Binding OpenCommand}" />
            <ctrls:CommandButton CommandViewModel="{Binding DeleteCommand}" />
        </ctrls:WorkaroundToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="column0"
                                  Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Expander Grid.Column="0"
                      Style="{StaticResource Area1Expander}"
                      IsExpanded="{Binding ShowItemsList}"
                      ExpandDirection="Right"
                      Header="{Binding ItemsLabel}"
                      Expanded="Expander_Expanded"
                      Collapsed="Expander_Collapsed">
                <DockPanel>
                    <ctrls:WorkaroundToolBar DockPanel.Dock="Top">
                        <ctrls:WorkaroundToolBar.Resources>
                            <Style TargetType="{x:Type ctrls:CommandButton}"
                                   BasedOn="{StaticResource ImageToolbarButton}" />
                        </ctrls:WorkaroundToolBar.Resources>
                        <ctrls:CommandButton CommandViewModel="{Binding SelectAllCommand}"
                                             Image="/Zetbox.Client.WPF;component/Images/preferences.png" />
                        <ctrls:CommandButton CommandViewModel="{Binding ClearAllCommand}"
                                             Image="/Zetbox.Client.WPF;component/Images/Users.png" />
                    </ctrls:WorkaroundToolBar>
                    <ListView MinWidth="300"
                              ItemsSource="{Binding Items}"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedItem}"
                              BorderThickness="0"
                              Margin="2,3,0,0">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type client:CalendarSelectionViewModel}">
                                <StackPanel Orientation="Horizontal"
                                            Background="{Binding Color}">
                                    <CheckBox IsChecked="{Binding Selected}" />
                                    <TextBlock Text="{Binding Name}"
                                               Margin="5,0,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Expander>

            <GridSplitter Grid.Column="1"
                          x:Name="gridSplitter"
                          ResizeDirection="Columns" />

            <ContentPresenter Grid.Column="2"
                              Grid.IsSharedSizeScope="True"
                              Content="{Binding WeekCalender}"
                              ContentTemplateSelector="{StaticResource defaultTemplateSelector}" />
        </Grid>
    </DockPanel>
</ctrls:WindowView>
