    <Border BorderBrush="{Binding Color}"
            BorderThickness="0,0,1,1"
            SnapsToDevicePixels="true"
            x:Name="allDayBorder"
            Background="{Binding Color}"
            MouseLeftButtonDown="Empty_MouseLeftButtonDown">
        <ItemsControl ItemsSource="{Binding AllDayItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True"
                                HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmdl:CalendarItemViewModel}">
                    <Border MouseLeftButtonDown="CalendarItem_MouseLeftButtonDown"
                            BorderThickness="1,1,1,1"
                            BorderBrush="#5D8CC9"
                            Margin="-1, -1, 5, 0"
                            Padding="5,3,3,3"
                            HorizontalAlignment="Stretch"
                            x:Name="item">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="{Binding Color, Converter={StaticResource LighterShadeConverter}, ConverterParameter=0.4}"
                                              Offset="-0.5" />
                                <GradientStop Color="{Binding Color, Converter={StaticResource DarkerShadeConverter}, ConverterParameter=0.1}"
                                              Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="{Binding Summary}"
                                       FontWeight="Bold" />
                        </StackPanel>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}"
                                     Value="True">
                            <Setter Property="BorderThickness"
                                    Value="3,3,3,3"
                                    TargetName="item" />
                            <Setter Property="Padding"
                                    Value="3,1,1,1"
                                    TargetName="item" />
                            <Setter Property="BorderBrush"
                                    Value="Black"
                                    TargetName="item" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
