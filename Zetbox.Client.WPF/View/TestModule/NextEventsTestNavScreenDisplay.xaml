    <UserControl.Resources>
        <Style BasedOn="{StaticResource zbButtonTemplate}"
               TargetType="Button">
            <Setter Property="Width"
                    Value="140" />
            <Setter Property="Height"
                    Value="90" />
            <Setter Property="Margin"
                    Value="5" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="50"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="300" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Padding="20"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Children}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="6"
                                             IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding ExecuteCommand, Converter={StaticResource CommandConverter}}"
                                        CommandParameter="{Binding}">
                                    <Button.Content>
                                        <TextBlock TextWrapping="WrapWithOverflow"
                                                   Text="{Binding Name}" />
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding AdditionalCommands}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="6"
                                             IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding Converter={StaticResource CommandConverter}}">
                                    <Button.Content>
                                        <TextBlock TextWrapping="WrapWithOverflow"
                                                   Text="{Binding Name}" />
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <ContentPresenter Grid.Row="1"
                              Content="{Binding NextEvents}"
                              ContentTemplateSelector="{StaticResource defaultTemplateSelector}" />
            <Border Grid.Row="2"
                    BorderThickness="2"
                    Background="LightBlue">
                <TextBlock Text="Hello World" />
            </Border>
                    
        </Grid>
    </ScrollViewer>
</UserControl>
