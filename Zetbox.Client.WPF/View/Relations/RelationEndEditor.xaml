    <DockPanel>

        <GroupBox DockPanel.Dock="Top"
                  Header="Details"
                  Margin="5,0">
            <DockPanel LastChildFill="False">
                <ctrls:LabeledView DockPanel.Dock="Top"
                                  Margin="5,0,5,0"
                                  DataContext="{Binding PropertyModelsByName[Type], UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />

                <ctrls:LabeledView DockPanel.Dock="Top"
                                  Margin="5,0,5,0"
                                  DataContext="{Binding PropertyModelsByName[Multiplicity], UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />

                <ctrls:LabeledView DockPanel.Dock="Top"
                                  Margin="5,0,5,0"
                                  DataContext="{Binding PropertyModelsByName[HasPersistentOrder], UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />

                <ctrls:LabeledView DockPanel.Dock="Top"
                                  Margin="5,0,5,0"
                                  DataContext="{Binding PropertyModelsByName[Navigator], UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />

                <ToolBarTray DockPanel.Dock="Top">
                    <ctrls:WorkaroundToolBar ItemsSource="{Binding Actions}">
                        <ctrls:WorkaroundToolBar.Resources>
                            <DataTemplate DataType="{x:Type client:ActionViewModel}">
                                <ctrls:CommandButton CommandViewModel="{Binding}"
                                                     Style="{StaticResource ImageToolbarButton}" />
                            </DataTemplate>
                        </ctrls:WorkaroundToolBar.Resources>
                    </ctrls:WorkaroundToolBar>
                </ToolBarTray>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</UserControl>
