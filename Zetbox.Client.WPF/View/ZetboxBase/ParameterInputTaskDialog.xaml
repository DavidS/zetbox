    <DockPanel Margin="{StaticResource DialogMargin}"
               LastChildFill="True">

        <UniformGrid DockPanel.Dock="Bottom"
                     Margin="{StaticResource DialogMargin}"
                     Rows="1">
            <ctrls:CommandButton IsDefault="True"
                                 Margin="{StaticResource DialogMargin}"
                                 CommandViewModel="{Binding InvokeCommand}"/>
            <ctrls:CommandButton IsCancel="True"
                                 Margin="{StaticResource DialogMargin}"
                                 CommandViewModel="{Binding CancelCommand}"/>
        </UniformGrid>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ValueViewModels, ValidatesOnDataErrors=true}"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch">

                <!-- use the whole horizontal space, but no more -->
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="DockPanel.Dock"
                                Value="Top" />
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type client:ViewModel}">
                        <ContentPresenter Content="{Binding}"
                                          ContentTemplateSelector="{StaticResource defaultTemplateSelector}" 
                                          tk:VisualTypeTemplateSelector.UseLabeledView="true" /> 
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</ctrls:WindowView>
