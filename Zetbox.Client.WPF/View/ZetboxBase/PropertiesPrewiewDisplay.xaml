<UserControl x:Class="Zetbox.Client.WPF.View.ZetboxBase.PropertiesPrewiewDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:Zetbox.Client.WPF.CustomControls;assembly=Zetbox.Client.WPF.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <ctrls:ZetboxListView x:Name="lst"
                              BorderThickness="0"
                              ItemsSource="{Binding PreviewInstances}"
                              ItemContainerStyle="{StaticResource ListViewAsGridViewItemContainerStyle}">
        </ctrls:ZetboxListView>
    </DockPanel>
</UserControl>
