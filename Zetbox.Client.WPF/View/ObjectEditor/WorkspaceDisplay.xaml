    <DockPanel>
        <Border DockPanel.Dock="Bottom"
                Style="{StaticResource AreaGroup1BorderStyle}"
                Margin="{StaticResource AreaGroup1Margin}">
            <DockPanel>
                <ctrls:CommandButton DockPanel.Dock="Right"
                                     CommandViewModel="{Binding SaveAndCloseCommand}"
                                     Style="{StaticResource ImageButton}"
                                     Image="/Zetbox.Client.WPF;component/Images/FloppyDisk.png"
                                     Margin="0"
                                     styles:Margin.Left="{StaticResource ItemMargin}" />
                <ctrls:CommandButton DockPanel.Dock="Right"
                                     CommandViewModel="{Binding SaveCommand}"
                                     Style="{StaticResource ImageButton}"
                                     Image="/Zetbox.Client.WPF;component/Images/FloppyDisk.png"
                                     Margin="0"
                                     styles:Margin.Left="{StaticResource ItemMargin}"
                                     styles:Margin.Right="{StaticResource ItemMargin}" />
                <ctrls:CommandButton DockPanel.Dock="Right"
                                     CommandViewModel="{Binding VerifyCommand}"
                                     styles:Controls.IsSecondary="true"
                                     Style="{StaticResource ImageButton}"
                                     Image="/Zetbox.Client.WPF;component/Images/ok.png"
                                     Margin="0"
                                     styles:Margin.Left="{StaticResource ItemMargin}"
                                     styles:Margin.Right="{StaticResource ItemMargin}" />
                <ctrls:CommandButton DockPanel.Dock="Right"
                                     CommandViewModel="{Binding DeleteCommand}"
                                     Visibility="{Binding IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource Self}}"
                                     styles:Controls.IsSecondary="true"
                                     Style="{StaticResource ImageButton}"
                                     Margin="0"
                                     styles:Margin.Left="{StaticResource ItemMargin}"
                                     styles:Margin.Right="{StaticResource ItemMargin}" />
                <ItemsControl DockPanel.Dock="Right"
                              ItemsSource="{Binding AdditionalCommands}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <DockPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrls:CommandButton DockPanel.Dock="Right"
                                                 CommandViewModel="{Binding}"
                                                 Style="{StaticResource ImageButton}"
                                                 Margin="0"
                                                 styles:Margin.Left="{StaticResource ItemMargin}"
                                                 styles:Margin.Right="{StaticResource ItemMargin}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ctrls:CommandButton DockPanel.Dock="Right"
                                     CommandViewModel="{Binding AbortCommand}"
                                     styles:Controls.IsSecondary="true"
                                     Style="{StaticResource LinkButton}"
                                     Margin="0"
                                     styles:Margin.Left="{StaticResource ItemMargin}"
                                     styles:Margin.Right="{StaticResource ItemMargin}" />
                <ctrls:CommandButton DockPanel.Dock="Left"
                                     CommandViewModel="{Binding ReportProblemCommand}"
                                     Style="{StaticResource ImageButton}"
                                     Image="/Zetbox.Client.WPF;component/Images/info.png"
                                     Margin="0"
                                     styles:Margin.Right="{StaticResource ItemMargin}" />
                <ToggleButton DockPanel.Dock="Left"
                              Command="{Binding ElevatedModeCommand, Converter={StaticResource CommandConverter}}"
                              Visibility="{Binding ElevatedModeCommand.Show, Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding ElevatedModeCommand.IsElevated, Mode=OneWay}"
                              Margin="0"
                              styles:Margin.Left="{StaticResource ItemMargin}"
                              styles:Margin.Right="{StaticResource ItemMargin}">
                    <Border Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Path=ElevatedModeCommand.Icon, Converter={StaticResource ImageConverter}}"
                                   MaxHeight="{StaticResource SmallControlHeight}"
                                   MaxWidth="{StaticResource SmallControlHeight}" />
                            <ContentPresenter Content="{Binding Path=ElevatedModeCommand.Label}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </ToggleButton>
                <TextBlock Text="{Binding SaveChangesHintText}"
                           Visibility="{Binding IsContextModified, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                           VerticalAlignment="Bottom"
                           Margin="0"
                           MaxHeight="50"
                           TextWrapping="Wrap"
                           styles:Margin.Left="{StaticResource ItemMargin}"
                           styles:Margin.Right="{StaticResource ItemMargin}" />
            </DockPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="column0"
                                  Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Expander Grid.Column="0"
                      Style="{StaticResource Area1Expander}"
                      IsExpanded="{Binding ShowItemsList}"
                      ExpandDirection="Right"
                      Header="{Binding ItemsLabel}"
                      Expanded="Expander_Expanded"
                      Collapsed="Expander_Collapsed">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               HorizontalAlignment="Center"
                               Text="{Binding ItemsLabel}" />
                    <ListBox x:Name="lstItems"
                             ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem}"
                             ItemContainerStyle="{StaticResource ListBoxItemContainerStyle}"
                             ItemTemplateSelector="{StaticResource listItemTemplateSelector}"
                             BorderThickness="0" />
                </DockPanel>
            </Expander>

            <GridSplitter Grid.Column="1"
                          x:Name="gridSplitter"
                          ResizeDirection="Columns" />

            <ContentPresenter Grid.Column="2"
                              Grid.IsSharedSizeScope="True"
                              Content="{Binding SelectedItem}"
                              ContentTemplateSelector="{StaticResource defaultTemplateSelector}" />
        </Grid>
    </DockPanel>
</ctrls:WindowView>
